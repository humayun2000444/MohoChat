<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="@color/purple_500"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_16sdp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="Add Contact"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_24sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new contact"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_24sdp" />

        <EditText
            android:id="@+id/contactNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordermain"
            android:hint="Contact Name"
            android:inputType="textPersonName"
            android:padding="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_16sdp" />

        <EditText
            android:id="@+id/contactPhoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordermain"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_16sdp" />


        <Button
            android:id="@+id/addContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:text="Add Contact"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="Instructions:\n• Enter contact name and phone number\n• The contact will be added to your phone contacts\n• You can invite them to use MohoChat"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:lineSpacingExtra="@dimen/_4sdp" />

    </LinearLayout>

</LinearLayout>