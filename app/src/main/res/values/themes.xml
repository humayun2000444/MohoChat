<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base MohoChat Light Theme -->
    <style name="Base.Theme.MohoChat" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorPrimaryVariant">@color/secondary_accent</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_accent</item>
        <item name="colorSecondaryVariant">@color/primary_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/main_background</item>
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/main_background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/MohoChat.Button</item>
        <item name="borderlessButtonStyle">@style/MohoChat.Button.Borderless</item>
    </style>

    <style name="Theme.MohoChat" parent="Base.Theme.MohoChat" />

    <!-- MohoChat Button Styles -->
    <style name="MohoChat.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="MohoChat.Button.Borderless" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_accent</item>
    </style>

    <!-- MohoChat Toolbar Style -->
    <style name="MohoChat.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface_background</item>
        <item name="titleTextColor">@color/primary_text</item>
        <item name="subtitleTextColor">@color/secondary_text</item>
    </style>

    <!-- Dialog Style -->
    <style name="dialog">
        <item name="android:windowBackground">@drawable/empty_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowFixedWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- MohoChat Dialog Style -->
    <style name="MohoChat.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="buttonBarButtonStyle">@style/MohoChat.Button.Borderless</item>
    </style>
</resources>